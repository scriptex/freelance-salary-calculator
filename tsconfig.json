{
	"compilerOptions": {
		"target": "es5",
		"lib": ["dom", "dom.iterable", "esnext"],
		"allowJs": true,
		"skipLibCheck": true,
		"strict": true,
		"forceConsistentCasingInFileNames": true,
		"noEmit": true,
		"esModuleInterop": true,
		"module": "esnext",
		"moduleResolution": "node",
		"resolveJsonModule": true,
		"isolatedModules": true,
		"jsx": "preserve",
		"incremental": true,
		"baseUrl": ".",
		"paths": {
			"data": ["data"],
			"pages": ["pages"],
			"shared": ["shared"],
			"components": ["components"]
		}
	},
	"include": ["next-env.d.ts", "**/*.ts", "**/*.tsx", "**/*.js", "global.d.ts"],
	"exclude": ["node_modules"]
}
